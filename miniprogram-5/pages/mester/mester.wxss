.mester_title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.name{
  border: 1rpx solid #00ffff;
  display: flex;
  justify-content: center;
}
.mester_title text{
  flex: 1;
  background-color: #e03cca;

}

.mester_text{
  display: flex;
}
.mester_text .text{
  flex: 1;
  border: 3rpx solid #c0c0c0;
  display: flex;
  justify-content: center;
}
.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
