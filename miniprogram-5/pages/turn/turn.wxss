.turn_bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: #23EBB9;
}
.bottom_text{
  padding: 8rpx 0rpx;
  width: 80rpx;
}
/* 三角形 */
.triangle{
  width: 0rpx;                           /*设置宽高为0，所以div的内容为空，从才能形成三角形尖角*/
  height: 0rpx;
  border-bottom: 20rpx solid #00a3af;
  border-left: 20rpx solid transparent;    /*transparent 表示透明*/
  border-right: 20rpx solid transparent;
}
.corner {
  width: 0rpx;                 /*  宽高设置为0，很重要，否则达不到效果 */
  height: 0rpx;
  border: 20rpx solid #002faf;
  border-bottom-color: transparent;    /* 设置透明背景色 */
  border-left-color: transparent;
  border-right-color: transparent;
}

